{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"]
}
